{
  "name": "portfolio_nextjs",
  "private": true,
  "engines": {
    "node": "14.x",
    "npm": "8.x"
  },
  "scripts": {
    "type-check": "tsc --pretty --noEmit",
    "clean": "rm -rf .next",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:es:fix": "eslint src --ext .js,jsx,.ts,.tsx --fix",
    "lint-staged": "lint-staged",
    "lint:style": "stylelint '**/*.{css,scss,sass}'",
    "lint:style:fix": "stylelint --fix '**/*.{css,scss,sass}'",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run format",
      "npm run lint:es:fix"
    ],
    "*.*.{css,scss,sass}": [
      "npm run format",
      "npm run lint:style:fix"
    ]
  },
  "dependencies": {
    "next": "^12.0.7",
    "node-fetch": "^3.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "16.11.9",
    "@types/react": "17.0.36",
    "autoprefixer": "^10.4.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.2",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "tailwindcss": "^2.2.19",
    "typescript": "4.5.2"
  }
}
